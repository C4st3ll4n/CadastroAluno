<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etNomeCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Site"
        android:inputType="textUri"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/etNomeCurso"
        app:layout_constraintTop_toBottomOf="@+id/etNomeCurso" />

    <EditText
        android:id="@+id/etCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Carga Horaria"
        android:inputType="number"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/etSite"
        app:layout_constraintTop_toBottomOf="@+id/etSite" />

    <Button
        android:id="@+id/btAdd"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:elevation="14dp"
        android:onClick="cadastrar"
        android:text="ADICIONAR"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btBack"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btBack"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="167dp"
        android:elevation="24dp"
        android:onClick="voltar"
        android:text="VOLTAR"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCH" />
</android.support.constraint.ConstraintLayout>