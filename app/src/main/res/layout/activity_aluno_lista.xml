<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="senac.cadaluno.castellan.cadastroaluno.Listas.AlunoListaAct">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddAluno"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="goToCadastroAluno"
        app:backgroundTint="@color/colorPrimaryDark"
        app:elevation="24dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/lista_alunos"
        app:layout_constraintEnd_toEndOf="@+id/lista_alunos"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ListView
        android:id="@+id/lista_alunos"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="574dp"
        android:layout_height="872dp"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@android:color/darker_gray"
        android:backgroundTintMode="src_in"
        android:cacheColorHint="@android:color/holo_blue_dark"
        android:contextClickable="true"
        android:divider="@color/colorPrimary"
        android:dividerHeight="8dp"
        android:entries="@android:color/holo_blue_bright"
        android:footerDividersEnabled="false"
        android:scrollbars="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595" />
</android.support.constraint.ConstraintLayout>
