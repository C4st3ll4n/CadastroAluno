<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="senac.cadaluno.castellan.cadastroaluno.Listas.CursoListaAct">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddCurso"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:onClick="goToCadastroCurso"
        app:backgroundTint="@color/colorAccent"
        app:elevation="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/lista_cursos"
        app:layout_constraintEnd_toEndOf="@+id/lista_cursos"
        app:rippleColor="@android:color/darker_gray"
        app:srcCompat="@android:drawable/ic_input_add" android:focusable="true"/>

    <ListView
        android:id="@+id/lista_cursos"
        android:layout_width="559dp"
        android:layout_height="731dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="8dp"
        android:divider="@color/colorAccent"
        android:dividerHeight="8dp"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
